<div class="page-header">
  <h1>Edit project</h1>
</div>


<%= form_for(@project, html:{class:"form-horizontal"}) do |f| %>
  <div class="form-group">
    <div class="col-sm-2">
    <%= f.label :name, class:"control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", style:"width:400px" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <div class="actions">
        <%= f.submit "Update project", class:"btn btn-primary" %>
        <%= link_to 'Cancel', projects_path, class:"btn btn-default" %>
      </div>
      <br>
      <div class="well text-center" style="width: 400px">
        <%= link_to "Delete", @project, class: "btn btn-danger", method: :delete %>
      </div>
    </div>
  </div>

<% end %> 
