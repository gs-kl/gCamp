<div class="jumbotron">
<h1>gCamp</h1>
<p>Your life, organized.</p>
</div>


<div class="row">


  <div class="col-md-4">
    <%=image_tag("home-1.jpg", class: "img-responsive")%>
    <br>
    <div class="panel panel-primary" style="height:200px">
      <div class="panel-heading">
        <h3 class="panel-title">Tasks</h3>
      </div>
      <div class="panel-body">Grouped by projects and lists. Just the way you like 'em.</div>
    </div>
  </div>




  <div class="col-md-4">
    <%=image_tag("home-2.jpg", class: "img-responsive")%>
    <br>
    <div class="panel panel-primary" style="height:200px">
      <div class="panel-heading">
        <h3 class="panel-title">Documents</h3>
      </div>
      <div class="panel-body">
        <ul>
          <li>Upload
            <li>Revise
              <li>Comment
        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <%=image_tag("home-3.jpg", class: "img-responsive")%>
    <br>
    <div class="panel panel-primary" style="height:200px">
      <div class="panel-heading">
        <h3 class="panel-title">Comments</h3>
      </div>
      <div class="panel-body">
        <ul>
          <li>Comment on tasks and documents
            <li>Get email notifications
        </ul>
      </div>
    </div>
  </div>



</div>

<% @quotes.each do |quote| %>
  <blockquote>
    <p><%= quote.text %></p>
    <footer><cite><%= quote.author %></cite></footer>
  </blockquote>
<% end %>





