<%= render "shared/errors", item: @user %>

<%= form_for(@user, html:{class:"form-horizontal"}) do |f| %>

  <div class="form-group">
    <div class="col-sm-2">
    <%= f.label :first_name, class:"control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :first_name, class: "form-control", style:"width:400px" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2">
    <%= f.label :last_name, class:"control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :last_name, class: "form-control", style:"width:400px" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2">
    <%= f.label :email, class:"control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", style:"width:400px" %>
    </div>
  </div>

  <% if params[:action] == "new" %>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <div class="actions">
          <%= f.submit "Create user", class:"btn btn-primary" %>
          <%= link_to 'Cancel', users_path, class:"btn btn-default" %>

        </div>
      </div>
    </div>
  <% elsif params[:action] == "edit" %>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <div class="actions">
          <%= f.submit "Edit user", class:"btn btn-primary" %>
          <%= link_to 'Cancel', users_path, class:"btn btn-default" %>
        </div>
        <br>
        <div class="well text-center" style="width: 400px">
          <%= link_to "Delete", @user, class: "btn btn-danger", method: :delete %>
        </div>

      </div>
    </div>
    </div>

  <% end %>

<% end %>
