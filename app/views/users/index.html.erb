<% if notice %>
  <p id="notice" class="alert alert-success text-center"><%= notice %></p>
<% end %>

<div class="page-header">
  <div class="pull-right">
    <%= link_to 'New User', new_user_path, class:"btn btn-info" %>
  </div>
  <h1>Users</h1>
</div>

  <table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><%= user.email %></td>
        <td>
          <div class="pull-right">
            <%= link_to "Show", user, class:"btn btn-xs btn-success" %>
            <%= link_to "Edit", edit_user_path(user), class:"btn btn-xs btn-info" %>
            <%= link_to "Destroy", user, class:"btn btn-xs btn-danger", method: :delete %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

